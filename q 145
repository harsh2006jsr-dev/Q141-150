Q145: Return a structure containing top student's details from a function.

/*
Sample Test Cases:
Input 1:
3 students: Riya 101 89, Karan 102 96, Meena 103 92
Output 1:
Top Student: Karan | Roll: 102 | Marks: 96

*/
#include <string.h>

struct Student {
    char name[50];
    int roll;
    float marks;
};

struct Student findTopper(struct Student s[], int n) {
    int topperIndex = 0;
    
    for (int i = 1; i < n; i++) {
        if (s[i].marks > s[topperIndex].marks) {
            topperIndex = i;
        }
    }
    
    return s[topperIndex];
}

int main() {
    int numStudents;
    printf("Enter the number of students: ");
    if (scanf("%d", &numStudents) != 1 || numStudents <= 0) {
        printf("Invalid input.\n");
        return 1;
    }
    
    struct Student students[numStudents];
    
    for (int i = 0; i < numStudents; i++) {
        printf("\nStudent %d:\n", i + 1);
        
        printf("Name: ");
        if (scanf("%49s", students[i].name) != 1) { return 1; }
        
        printf("Roll No: ");
        if (scanf("%d", &students[i].roll) != 1) { return 1; }
        
        printf("Marks: ");
        if (scanf("%f", &students[i].marks) != 1) { return 1; }
    }
    
    struct Student topper = findTopper(students, numStudents);
    
    printf("\nOutput 1:\n");
    printf("Top Student: %s | Roll: %d | Marks: %.0f\n", 
           topper.name, 
           topper.roll, 
           topper.marks);
    return 0;
}