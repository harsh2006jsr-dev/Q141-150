Q142: Store details of 5 students in an array of structures and print all.

/*
Sample Test Cases:
Input 1:
Details of 5 students (Name, Roll, Marks)
Output 1:
Tabular list of all 5 students with their details

*/
#include <stdio.h>

struct Student {
    char name[50];
    int roll;
    float marks;
};

void printStudents(struct Student s[], int n) {
    printf("\n--- Student Details (Tabular List) ---\n");
    printf("%-20s %-10s %-10s\n", "Name", "Roll No", "Marks");
    printf("--------------------------------------------\n");
    
    for (int i = 0; i < n; i++) {
        printf("%-20s %-10d %-10.2f\n", 
               s[i].name, 
               s[i].roll, 
               s[i].marks);
    }
    printf("--------------------------------------------\n");
}

int main() {
    const int NUM_STUDENTS = 5;
    struct Student students[NUM_STUDENTS];
    
    printf("Enter details for %d students (Name, Roll, Marks):\n", NUM_STUDENTS);
    for (int i = 0; i < NUM_STUDENTS; i++) {
        printf("\nStudent %d:\n", i + 1);
        
        printf("Name: ");
        if (scanf("%49s", students[i].name) != 1) {}
        
        printf("Roll No: ");
        if (scanf("%d", &students[i].roll) != 1) {}
        
        printf("Marks: ");
        if (scanf("%f", &students[i].marks) != 1) {}
    }
    
    printStudents(students, NUM_STUDENTS);
    
    return 0;
}