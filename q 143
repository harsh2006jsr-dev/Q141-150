Q143: Find and print the student with the highest marks.

/*
Sample Test Cases:
Input 1:
3 students: Ravi 101 95, Sita 102 85, Aman 103 88
Output 1:
Topper: Ravi (Marks: 95)

*/
#include <stdio.h>
#include <string.h>

struct Student {
    char name[50];
    int roll;
    float marks;
};

void findTopper(struct Student s[], int n) {
    if (n <= 0) {
        printf("No student data available.\n");
        return;
    }

    int topperIndex = 0;
    
    // Iterate through the array to find the student with the maximum marks
    for (int i = 1; i < n; i++) {
        if (s[i].marks > s[topperIndex].marks) {
            topperIndex = i;
        }
    }

    // Print the details of the topper
    printf("Topper: %s (Marks: %.2f)\n", 
           s[topperIndex].name, 
           s[topperIndex].marks);
}

int main() 
{
    int numStudents;
    printf("Enter the number of students: ");
    if (scanf("%d", &numStudents) != 1 || numStudents <= 0) {
        printf("Invalid number of students.\n");
        return 1;
    }
    struct Student students[numStudents];
    
    printf("Enter details for %d students (Name, Roll, Marks):\n", numStudents);
    for (int i = 0; i < numStudents; i++) {
        printf("\nStudent %d:\n", i + 1);
        
        printf("Name: ");
        if (scanf("%49s", students[i].name) != 1) { return 1; }
        
        printf("Roll No: ");
        if (scanf("%d", &students[i].roll) != 1) { return 1; }
        
        printf("Marks: ");
        if (scanf("%f", &students[i].marks) != 1) { return 1; }
    }
    
    findTopper(students, numStudents);
    
    return 0;
}